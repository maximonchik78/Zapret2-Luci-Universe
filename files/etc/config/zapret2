config main 'config'
    option enabled '0'
    option mode 'transparent'
    option strategy 'tpws'
    option ipv6 '1'
    option autoupdate '1'
    option update_hour '3'
    option debug '0'

config network 'network'
    option lan_interface 'br-lan'
    list dns_servers '8.8.8.8'
    list dns_servers '8.8.4.4'
    option dns_port '53'

config performance 'performance'
    option conntrack 'enabled'
    option max_connections '10000'
    option cache_size '50'
    option log_level '2'

config advanced 'advanced'
    option config_dir '/etc/zapret'
    option work_dir '/var/lib/zapret'
    option custom_rules ''

config list 'rutracker'
    option enabled '1'
    option name 'RuTracker Block List'
    option type 'domains'
    option url 'https://raw.githubusercontent.com/zapret-info/z-i/master/dump.csv'
    option update 'daily'
    option entries '0'

config whitelist 'essential'
    option domain 'windowsupdate.com'
    option type 'domain'
    option reason 'Windows Updates'
    option permanent '1'
