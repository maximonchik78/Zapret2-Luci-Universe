config main 'config'
    option enabled '0'
    option mode 'transparent'
    option strategy 'tpws'
    option ipv6 '1'
    option autoupdate '1'
    option update_hour '3'
    option debug '0'
    option update_interval '7'

config network 'network'
    option lan_interface 'br-lan'
    option wan_interface 'eth0'
    list dns_servers '8.8.8.8'
    list dns_servers '8.8.4.4'
    option dns_port '53'

config performance 'performance'
    option conntrack 'enabled'
    option max_connections '10000'
    option cache_size '50'
    option log_level '2'
    option worker_threads '2'

config advanced 'advanced'
    option config_dir '/etc/zapret'
    option work_dir '/var/lib/zapret'
    option custom_rules ''

config list 'rutracker'
    option enabled '1'
    option name 'RuTracker Block List'
    option type 'domains'
    option url 'https://raw.githubusercontent.com/zapret-info/z-i/master/dump.csv'
    option update 'daily'
    option update_hour '4'
    option entries '0'

config list 'additional'
    option enabled '0'
    option name 'Additional Sites'
    option type 'domains'
    option url 'https://example.com/blocklist.txt'
    option update 'weekly'
    option entries '0'

config whitelist 'essential'
    option domain 'windowsupdate.com'
    option type 'domain'
    option reason 'Windows Updates'
    option permanent '1'

config whitelist 'local'
    option domain '192.168.1.0/24'
    option type 'cidr'
    option reason 'Local Network'
    option permanent '1'

config blacklist 'custom'
    option entry 'bad-site.com'
    option category 'custom'
    option enabled '1'

config schedule 'workhours'
    option name 'Work Hours'
    option action 'reduced'
    option time '09:00-18:00'
    list days 'mon'
    list days 'tue'
    list days 'wed'
    list days 'thu'
    list days 'fri'

config device 'mydevice'
    option mac 'AA:BB:CC:DD:EE:FF'
    option policy 'whitelist'
    option enabled '1'
